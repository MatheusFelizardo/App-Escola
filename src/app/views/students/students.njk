
{% extends "layout.njk" %}


{% block content %}
    
    <div class="card table-content">

        <a id="novoInstutor" href="/students/create">Novo Aluno</a>

        <table width="100%">
            <thead>
               <tr>
                   <th>Nome completo</th>
                   <th>Ano Escolar</th>
                   <th>Ação</th>
               </tr>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td><span style="background-image: url({{student.avatar_url}})"></span>{{student.name}}</td>
                    <td>
                        {{student.escolaridade}}
                    </td>
                    <td><a href="/students/{{student.id}}">Ver</a></td>
                </tr>
                 {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}