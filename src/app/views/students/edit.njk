
{% extends "layout.njk" %}


{% block content %}
    
    <div class="card">  

        <section 
            class="image" 
            style ="background: url('{{students.avatar_url}}') no-repeat center center">
            
        </section>
        
        <section class="details">
            <div class="formatação">
                <form method="POST" action="/students?_method=PUT">
                <input type="hidden" name="id" value="{{students.id}}">
                    <p> Editar Aluno</p>
                    <div class="item">
                <div>Avatar URL</div>
                    <div>
                    <input 
                    placeholder="https://"
                    type="url" 
                    name="avatar_url"
                    value="{{students.avatar_url}}"
                    >
                    </div>
            </div>
            
            <div class="item">
                <div>Nome Completo</div>
                <div>
                    <input required
                    type="text" 
                    name="name"
                    value="{{students.name}}"
                    >
                </div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>
                    <input required
                    type="email" 
                    name="email"
                    value="{{students.email}}"
                    >
                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                     <input required
                    type="date" 
                    name="birth"
                    value="{{students.birth}}"
                    >
                </div>
            </div>

            <div class="item">
                <div>Ano Escolar</div>
                <div>
                    <select name="escolaridade">
                       
                        <option value="quintoF" {% if students.escolaridade == "quintoF" %} selected 
                        {% endif %}>                            
                        5º Ano do Ensino Fundamental                    
                        </option>

                        <option value="sextoF" {% if students.escolaridade == "sextoF" %} selected {% endif %}>
                        6º Ano do Ensino Fundamental                    
                        </option>

                        <option value="setimoF" {% if students.escolaridade == "setimoF" %} selected {% endif %}>
                        7º Ano do Ensino Fundamental                    
                        </option>

                        <option value="oitavoF" {% if students.escolaridade == "oitavoF" %} selected {% endif %}>
                        8º Ano do Ensino Fundamental                    
                        </option>

                        <option value="nonoF"  {% if students.escolaridade == "nonoF" %} selected {% endif %}>
                        9º Ano do Ensino Fundamental                    
                        </option>

                        <option value="primeiroM"  {% if students.escolaridade == "primeiroM" %} selected {% endif %}>                       
                        1º Ano do Ensino Médio                    
                        </option>

                        <option value="segundoM"  {% if students.escolaridade == "segundoM" %} selected {% endif %}>
                        2º Ano do Ensino Médio                    
                        </option>

                        <option value="terceiroM"  {% if students.escolaridade == "terceiroM" %} selected {% endif %}>
                        3º Ano do Ensino Médio                    
                        </option>
                        
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Carga Horária Semanal</div>
                <div>
                    <input required
                    type="number" 
                    name="carga_horaria"
                    placeholder="Em horas"
                    value="{{students.carga_horaria}}"
                    >
                </div>
            </div>
            

           <button id="salvar" type="submit">Salvar</button>
                </form>

                <form action="/students?_method=DELETE" method="post">
                    <input type="hidden" name="id" value="{{students.id}}">
                    <button id="delete" type="submit">Deletar</button>
                </form>

            </div>
            </section>
        </div>


{% endblock content %}

