
{% extends "layout.njk" %}


{% block content %}
    
    <div class="card table-content">

        <div class="header-menu">
            <a id="novoInstutor" href="/teachers/create">Novo instrutor</a>
            <form>
            <input placeholder="Nome do professor / matéria" type="text" name="filter" value="{{filter}}">
            <button id="filtrar" type="submit" >Filtrar</button>
            </form>
        </div>

        <table width="100%">
            <thead>
               <tr>
                   <th>Nome completo</th>
                   <th>Matérias</th>
                   <th>Ação</th>
               </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td><span style="background-image: url({{teacher.avatar_url}})"></span>{{teacher.name}}</td>
                    <td>
                            {% for materia in teacher.materias %}
                            <span id="materias">{{materia}}</span>
                            {% endfor %}
                    </td>
                    <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
                </tr>
                 {% endfor %}
            </tbody>
        </table>

        <div class="pagination" data-page="{{pagination.page}}"
        data-total="{{pagination.total}}"
        data-filter="{{filter}}"
        ></div>
    </div>
{% endblock content %}